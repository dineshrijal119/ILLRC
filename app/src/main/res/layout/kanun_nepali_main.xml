<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/custum_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal"
           >
            <TextView
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:text="क्षेत्रगत बर्गिकरण :"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <Spinner
                android:id="@+id/category_chetragat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:spinnerMode="dropdown"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:text="कानूनको बर्गिकरण:"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <Spinner

                android:id="@+id/category_kanuni"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:text="सुची:"
                android:textColor="@android:color/black"
                android:textSize="16dp" />
            <Spinner
                android:id="@+id/suchi"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:spinnerMode="dropdown" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/kanuni_khoj"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            android:text="कानूनको खोज"
            android:textSize="16dp"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/thya"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            android:text="तथ्यगत खोज"
            android:textSize="16dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>